
@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Apply</h2>


<form id="apply-form" action="@Url.Action("SubmitApplication", "Customer")" method="post">

    @Html.AntiForgeryToken()
    <div class="container">

        <label for="firstName"><b>First Name</b></label>
        <input type="text" placeholder="" name="firstName" value="">

        <label for="lastName"><b>First Name</b></label>
        <input type="text" placeholder="" name="lastName" value="">

        <label for="Dob"><b>Date of birth</b></label>
        <input type="date" placeholder="" name="Dob" value="">

        <label for="annualIncome"><b>Annual Income</b></label>
        <input type="number" placeholder="" name="annualIncome" value="">

    </div>
</form>

<div>

    <button type="submit" class="btn" form="apply-form">Apply</button>

</div>